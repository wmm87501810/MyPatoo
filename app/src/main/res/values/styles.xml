    <style name="ChooseGenderIconStyle">
        <item name="android:layout_width">@dimen/sizeOfGenderIcon</item>
        <item name="android:layout_height">@dimen/sizeOfGenderIcon</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ChooseGenderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GradientMaleBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/bg_of_gradient_male_btn</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GradientFemaleBtnStyle" parent="GradientMaleBtnStyle">
        <item name="android:background">@drawable/bg_of_gradient_female_btn</item>
    </style>

    <style name="SkipStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/bg_of_skip_btn</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NextStepStyle" parent="SkipStyle">
        <item name="android:textColor">@color/black</item>
    </style>
